<Window x:Class="Translator_WPF.Views.TranslatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator_WPF"
        xmlns:vm="clr-namespace:Translator_WPF.ViewModels"
        mc:Ignorable="d"
        Title="Translator" Height="250" Width="800">
    <Window.DataContext>
        <vm:TranslateVM />
    </Window.DataContext>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="10">
            <Grid DockPanel.Dock="Top" Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="TextToTranslateBox"
                      Grid.Column="0"
                      ItemsSource="{Binding Languages}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                      Height="35"
                      Margin="0 0 10 0"
                      Padding="8 5"
                      BorderThickness="1"
                      BorderBrush="#E0E0E0"
                      Background="White"/>

                <Button x:Name="TranslateButton"
                    Grid.Column="1"
                    Content="Preložiť"
                    Click="TranslateButton_Click"
                    Height="35"
                    Width="100"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <RichTextBox x:Name="TextToTranslate"
                     AcceptsReturn="True"
                     BorderThickness="1"
                     BorderBrush="#E0E0E0"
                     Padding="8"
                     Background="White">
                <RichTextBox.Resources>
                    <Style TargetType="RichTextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RichTextBox">
                                    <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                        <ScrollViewer Padding="{TemplateBinding Padding}" 
                                                x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </DockPanel>

        <DockPanel Grid.Column="1" Margin="10">
            <ComboBox DockPanel.Dock="Top"
                  ItemsSource="{Binding ToLanguages}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedToLanguage, Mode=TwoWay}"
                  Height="35"
                  Padding="8 5"
                  Margin="0 0 0 10"
                  BorderThickness="1"
                  BorderBrush="#E0E0E0"
                  Background="White"/>

            <Border Background="White"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                CornerRadius="4"
                Padding="8">
                <TextBlock x:Name="translatedTextBlock"
                      Text="{Binding TranslateResult}"
                      TextWrapping="Wrap"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
