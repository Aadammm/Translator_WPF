<Window x:Class="Translator_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator_WPF"
        xmlns:vm="clr-namespace:Translator_WPF.ViewModel"
        mc:Ignorable="d"
        Title="Translator" Height="250" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <vm:Translate x:Key="vm"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid  Background="Gray">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
       
        <DockPanel Grid.Column="0"
                   Margin="3">
            <ComboBox x:Name="fromLanguage"
                      Width="150"  
                      Margin="0 0 0 4"
                      DockPanel.Dock="Top"
                      IsEditable="True"/>
            <RichTextBox x:Name="TextToTranslate"
                         DockPanel.Dock="Bottom"
                         PreviewKeyDown="RichTextBox_PreviewKeyDown">
            </RichTextBox>
        </DockPanel>
        
        <DockPanel  Grid.Column="1"
                    Margin="3">
            <ComboBox x:Name="toLanguage"
                      Width="150"
                      Margin="0 0 0 4"
                      DockPanel.Dock="Top"
                      IsEditable="True"/>
            <TextBlock DockPanel.Dock="Bottom"
                       Background="White">

            </TextBlock>
        </DockPanel>
    </Grid>
</Window>
