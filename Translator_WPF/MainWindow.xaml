<Window x:Class="Translator_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator_WPF"
        mc:Ignorable="d"
        Title="Translator" Height="250" Width="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   Margin="3">
            <ComboBox x:Name="currentLanguage"
                      Width="150"  
                      DockPanel.Dock="Top"
                      IsEditable="True"/>
            <RichTextBox DockPanel.Dock="Bottom">

            </RichTextBox>
        </DockPanel>
        <DockPanel  Grid.Column="1"
                    Margin="3">
            <ComboBox x:Name="translateLanguage"
                      Width="150"
                      DockPanel.Dock="Top"
                      IsEditable="True"/>
            <RichTextBox DockPanel.Dock="Bottom">

            </RichTextBox>
        </DockPanel>
    </Grid>
</Window>
